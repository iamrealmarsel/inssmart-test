{% macro getBikes(items) %}
  <section class="bikes">

    <div class="bikes__tabs">
      {% for item in items %}
        <div class="bikes__tab" data-tab-to="tab-{{item.id}}">{{item.tab}}</div>
      {% endfor %}
    </div>

    <div class="bikes__content" id="accordion">
      {% for item in items %}

        <div class="bikes__accordion-title">
          {{item.tab}}
          <svg width="14" height="9" viewbox="0 0 14 9" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M13.7098 1.20998C13.6169 1.11625 13.5063 1.04186 13.3844 0.991091C13.2625 0.940323 13.1318 0.914185 12.9998 0.914185C12.8678 0.914185 12.7371 0.940323 12.6152 0.991091C12.4934 1.04186 12.3828 1.11625 12.2898 1.20998L7.70982 5.78997C7.61685 5.8837 7.50625 5.9581 7.38439 6.00886C7.26253 6.05963 7.13183 6.08577 6.99982 6.08577C6.86781 6.08577 6.7371 6.05963 6.61524 6.00886C6.49338 5.9581 6.38278 5.8837 6.28982 5.78997L1.70982 1.20998C1.61685 1.11625 1.50625 1.04186 1.38439 0.991091C1.26253 0.940323 1.13183 0.914185 0.999816 0.914185C0.867804 0.914185 0.737098 0.940323 0.615239 0.991091C0.49338 1.04186 0.382779 1.11625 0.289816 1.20998C0.103565 1.39734 -0.000976562 1.6508 -0.000976562 1.91498C-0.000976562 2.17917 0.103565 2.43262 0.289816 2.61998L4.87982 7.20997C5.44232 7.77177 6.20481 8.08733 6.99982 8.08733C7.79482 8.08733 8.55732 7.77177 9.11982 7.20997L13.7098 2.61998C13.8961 2.43262 14.0006 2.17917 14.0006 1.91498C14.0006 1.6508 13.8961 1.39734 13.7098 1.20998Z" fill="#0C0C0C"/>
          </svg>
        </div>

        <div class="bikes__accordion-wrapper" id="tab-{{item.id}}">
          <div class="bikes__accordion-content">

            <div class="bikes__description">
              <div class="bikes__description-img">
                <img src="img/bike_{{item.id}}.png" alt="{{item.title}}">
              </div>
              <div class="bikes__description-text">
                <h2 class="bikes__title">{{item.title}}</h2>
                <p class="bikes__text">{{item.text.p1}}</p>
                <p class="bikes__text">{{item.text.p2}}</p>
              </div>
            </div>

            <div class="bikes__features-wrapper">
              <h3 class="bikes__caption">Характеристики</h3>

              <ul id="feature-list-{{item.id}}" class="bikes__features {{ 'bikes__features_bullet' if item.featuresMod }}">
                {% for feature in item.features %}
                  <li class="bikes__feature">{{ feature }}</li>
                {% endfor %}
              </ul>

              <h3 class="bikes__caption">Добавить характеристику</h3>
              <form class="bikes__add" data-feature-add-to="feature-list-{{item.id}}">
                <input class="inp" name="feature" type="text" placeholder="Алюминиевый сплав">
                <button class="btn" type="submit">Добавить</button>
              </form>
            </div>

          </div>
        </div>

      {% endfor %}
    </div>

  </section>

{% endmacro %}
