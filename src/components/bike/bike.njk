{% macro getBikes(items) %}
  <section class="bikes">

    <div class="bikes__tabs">
      {% for item in items %}
        <div class="bikes__tab" data-tab-to="tab-{{item.id}}">{{item.tab}}</div>
      {% endfor %}
    </div>

    <div class="bikes__content" id="accordion">
      {% for item in items %}

        <div class="bikes__accordion-title">
          ---
          {{item.tab}}
          ---
        </div>

        <div class="bikes__accordion-wrapper" id="tab-{{item.id}}">
          <div class="bikes__accordion-content">

            <div class="bikes__content-img">
              <img src="" alt="{{item.title}}">
            </div>
            <div class="bikes__content-text">
              <h2 class="bikes__title">{{item.title}}</h2>
              <p class="bikes__text">{{item.text.p1}}</p>
              <p class="bikes__text">{{item.text.p2}}</p>
            </div>

            <hr>

            <h3 class="bikes__caption">Характеристики</h3>

            <ul id="feature-list-{{item.id}}" class="bikes__features {{ 'bikes__features_bullet' if item.featuresMod }}">
              {% for feature in item.features %}
                <li class="bikes__feature">{{ feature }}</li>
              {% endfor %}
            </ul>

            <h3 class="bikes__caption">Добавить характеристику</h3>
            <form class="bikes__add" data-feature-add-to="feature-list-{{item.id}}">
              <input class="inp" name="feature" type="text" placeholder="Алюминиевый сплав">
              <button class="btn" type="submit">Добавить</button>
            </form>

            <div class="bikes__confirm">
              <button class="btn">Окей</button>
              <button class="btn btn_cancel">Отмена</button>
            </div>

          </div>
        </div>

      {% endfor %}
    </div>

  </section>

{% endmacro %}
